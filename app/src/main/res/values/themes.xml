<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Brandatty" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/teal_700</item>
        <item name="colorPrimaryVariant">@color/teal_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white_400</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme" parent="Theme.Brandatty">
        <item name="android:statusBarColor" tools:targetApi="l">@color/white_400</item>
    </style>

<style name="MainHead" parent="TextAppearance.AppCompat.Medium">
    <item name="fontFamily">@font/museo_sans_700</item>
    <item name="android:textColor">@color/teal_700</item>
</style>

<style name="SubHead" parent="TextAppearance.AppCompat.Small">
    <item name="fontFamily">@font/museo_sans_300</item>
    <item name="android:textColor">@color/black</item>
</style>

<style name="CommonInputText" parent="TextAppearance.AppCompat.Small">
    <item name="fontFamily">@font/museo_sans_300</item>
    <item name="android:textColor">@color/teal_900</item>
</style>

<style name="BottomButtonText" parent="TextAppearance.AppCompat.Medium">
    <item name="fontFamily">@font/museo_sans_700</item>
    <item name="android:textColor">@color/white</item>
    <item name="android:textSize">22sp</item>
</style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.ActionBar" >
    </style>

    <style name="AppTheme.Toolbar"  parent="Widget.MaterialComponents.Toolbar" >
        <item name="background">@color/white</item>
        <item name="backgroundColor">@color/white</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />

    <style name="BottomNavTextActive" parent="TextAppearance.AppCompat.Small">
        <item name="fontFamily">@font/museo_sans_500</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingTop">4dp</item>
    </style>

    <style name="BottomNavTextNormal" parent="TextAppearance.AppCompat.Small">
        <item name="fontFamily">@font/museo_sans_500</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#70FFFFFF</item>
    </style>

    <style name="AppTheme.FullScreenDialog" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/teal_700</item>
        <item name="colorPrimary">@color/teal_700</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="actionMenuTextColor">@color/teal_700</item>
    </style>

    <style name="AppTheme.Filter" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/teal_700</item>
        <item name="colorPrimary">@color/teal_700</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="actionMenuTextColor">@color/teal_700</item>
    </style>

    <style name="AppTheme.FullScreenDialog.NoStatusBar" parent="AppTheme.FullScreenDialog">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="ThemeDialog" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="android:windowMinWidthMajor">80%</item>
        <item name="android:windowMinWidthMinor">80%</item>
    </style>
</resources>